<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbd18f	"
    tools:context=".QuestionActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toTopOf="@+id/txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud3png" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Ici la question va etre affichÃ©e"
        android:textAlignment="center"
        android:textColor="#7D5801"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:background="#e3b448"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt">


        <RadioButton
            android:id="@+id/optA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:buttonTint="#7D5801"
            android:text="Option A"
            android:textColor="#7D5801"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/optB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:buttonTint="#7D5801"
            android:text="Option B"
            android:textColor="#7D5801"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/optC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:buttonTint="#7D5801"
            android:text="Option C"
            android:textColor="#7D5801"

            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/optD"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:buttonTint="#7D5801"
            android:text="Option D"
            android:textColor="#7D5801"

            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/next"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Next"
        android:textAllCaps="false"
        android:onClick="loadAnswer"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textColor="#7D5801"
        android:backgroundTint="#B3B87F"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="51dp"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloudone" />
</androidx.constraintlayout.widget.ConstraintLayout>